{
    "compilerOptions":  {
                            "target":  "ES2021",
                            "module":  "Node16",
                            "moduleResolution":  "node16",
                            "lib":  [
                                        "ES2021",
                                        "DOM"
                                    ],
                            "outDir":  "dist",
                            "rootDir":  "src",
                            "strict":  true,
                            "sourceMap":  true,
                            "esModuleInterop":  true,
                            "resolveJsonModule":  true,
                            "skipLibCheck":  true
                        },
    "include":  [
                    "src"
                ],
    "exclude":  [
                    "node_modules",
                    ".vscode-test"
                ]
}
